            image2: 'imagenes/item5-re-back.jpg',
            displacementImage: 'imagenes/distortion/fluid-re.jpg'
        });
          var myAnimationBottomsW = new hoverEffect({
            parent: document.querySelector('.promo__item-2wom'),
            intensity: 0.3,
